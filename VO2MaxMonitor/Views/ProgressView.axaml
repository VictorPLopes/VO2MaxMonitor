<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:VO2MaxMonitor.ViewModels"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d"
             x:Class="VO2MaxMonitor.Views.ProgressView"
             x:DataType="vm:ProgressViewModel">
    <Border
        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
        CornerRadius="{DynamicResource OverlayCornerRadius}"
        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
        BorderThickness="1.5"
        Padding="16">
        <Grid RowDefinitions="Auto,*">
            <TextBlock Grid.Row="0" Text="{Binding XAxes[0].Labels.Count, StringFormat='Best daily V̇O₂ max over last {0} recorded days'}"
                       Theme="{DynamicResource CaptionTextBlockStyle}"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       FontSize="12"
                       Margin="0,0,0,12" />
            <lvc:CartesianChart Grid.Row="1"
                Series="{Binding Series}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}" />
        </Grid>
    </Border>
</UserControl>